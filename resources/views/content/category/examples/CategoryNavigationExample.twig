{% extends 'PlentyPluginShowcase::templates.Example' %}
{% import 'PlentyPluginShowcase::content.category.examples.categoryNavigation.CategoryNavMacro' as nav %}

{% block Description %}
    <h2 id="category-example-navigation">
        Category navigation and item lists
    </h2>

    <p>
    </p>
{% endblock %}

{% block ExampleOutput %}


    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#showcase-categories-example-nav">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="{{ url('categories') }}#category-example-navigation" class="navbar-brand">
                    <span class="glyphicon glyphicon-home"></span>
                </a>
            </div>
            <div class="collapse navbar-collapse" id="showcase-categories-example-nav">
                <ul class="nav navbar-nav">
                    {{ nav.output( categoryTree, url('categories'), 2, '#category-example-navigation') }}
                </ul>
            </div>
        </div>
    </nav>

    <div class="row">
        {% if currentCategory is null %}
            <div class="col-lg-12 col-md-12">
                <h3 class="text-muted text-center">No category selected.</h3>
            </div>
        {% else %}
            {% for item in categoryItems %}
                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                    <div class="thumbnail item-box">
                        <img src="{{ image_url_preview( item.variationImageList.0.path ) }}" alt="{{ item.itemDescription.name1 }}">
                        <div class="caption">
                            <h4>{{ item.itemDescription.name1 }}</h4>
                            <p class="item-description">
                                {{ item.itemDescription.shortDescription }}
                            </p>
                            <p class="text-right bold">
                                {{ item.variationRetailPrice.price|localizedcurrency('EUR') }}
                            </p>
                            <p>
                                <a class="btn btn-primary block" href="#category-example-navigation">
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                    view item
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}

{% set exampleId = "category-example-navigation" %}
{% set exampleFiles = {
"Controller.php"             : "PlentyPluginShowcase::content.category.examples.categoryNavigation.Controller.twig",
"Template.twig"             : "PlentyPluginShowcase::content.category.examples.categoryNavigation.Category.twig",
"CategoryListMacro.twig"    : "PlentyPluginShowcase::content.category.examples.categoryNavigation.CategoryNavMacro.twig"
} %}
